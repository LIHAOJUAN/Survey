<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lihaojuan.survey.MainActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/survey"
        android:id="@+id/imageView"
        android:layout_marginBottom="335dp"
        android:scaleType="fitXY"
        />

    <Button
        android:text="Let's get start!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:id="@+id/btn"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you very much for your acceptance of this questionnaire! This is a survey of fish culture,which includes the problems you may encounter when you fish, and what kind of group you want to get In order to learn more about the difficulties you encountered in fish farmin,please answer these questions as honestly as you can. "
        android:textSize="20dp"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/btn"
        android:layout_alignParentStart="true" />
</RelativeLayout>
