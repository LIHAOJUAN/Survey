<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="If you have a smart fish tank, how much can you accept?"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/tvStep8"
        android:textSize="35dp"
        android:layout_weight="0.07"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#009FFF"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:id="@+id/rgStep8"
        >
        <RadioButton
            android:id="@+id/rb8a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000~5000 yuan"
            android:textSize="25sp"
            />

        <RadioButton
            android:id="@+id/rb8b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000~10000 yuan"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/rb8c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000~2000 yuan"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/rb8d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More than 20000 yuan"
            android:textSize="25sp" />

    </RadioGroup>

    <Button
        android:text="Next"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn8"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:layout_marginTop="50dp"        />

</LinearLayout>